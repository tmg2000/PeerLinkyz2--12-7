<resources>

    <style name="Theme.PeerLinkyz" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <!-- Error colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/colorSurface</item>
        <item name="messageTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/yellow_text</item>
        <item name="android:textColorHint">@color/dark_blue</item>
        <item name="messageSentBackground">#4CAF50</item>
        <item name="messageReceivedBackground">#212121</item>
        <item name="iconColor">@color/white</item>
    </style>
</resources>